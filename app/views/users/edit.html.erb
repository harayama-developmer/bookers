<h2>User info</h2>

<%= form_with(model: @user, local: true, id: "edit_user_#{@user.id}") do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.attachment_field :profile_image, class: "user_image" %>
  </div>

  <div class="field">
    <%= form.label :introduction %>
    <%= form.text_area :introduction, class: "introduction" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
