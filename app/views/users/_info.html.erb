<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", alt: "Profile image" %>
<table class="table">
  <tbody>
    <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.introduction %></th>
    </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to '', edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{user.id}" %>
</div>
<h2>New book</h2>
<%= form_with(model: book, local: true, id: "new_book" ) do |form| %>
  <div class="field row">
    <%= form.label :title %>
    <%= form.text_field :title, class: "col-xs-12 book_title" %>
  </div>

  <div class="field row">
    <%= form.label :opinion %>
    <%= form.text_area :body, class: "col-xs-12 book_body" %>
  </div>

  <div class="actions row">
    <%= form.submit class: "btn btn-primary col-xs-12" %>
  </div>
<% end %>
