<div class="row">
  <div class="col-xs-3">
    <h2>User info</h2>
    <%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", alt: "Profile image" %>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to '', edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>
    </div>
    <h2>New book</h2>
    <%= form_with(model: Book.new, local: true, id: "new_book" ) do |form| %>
      <div class="field row">
        <%= form.label :title %>
        <%= form.text_field :title, class: "col-xs-12 book_title" %>
      </div>

      <div class="field row">
        <%= form.label :opinion %>
        <%= form.text_area :body, class: "col-xs-12 book_body" %>
      </div>

      <div class="actions row">
        <%= form.submit class: "btn btn-primary col-xs-12" %>
      </div>
    <% end %>
  </div>
  <div class="col-xs-9">
    <h2>Users</h2>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg", alt: user.profile_image_id? ? "Profile image" : "No image icon" %>
            </td>
            <td><%= user.name %></td>
            <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

