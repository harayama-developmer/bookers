<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%# Header %>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span>Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to " Home", root_path, class: "glyphicon glyphicon-home home" %>
            </li>
            <li>
              <%= link_to " About", home_about_path, class: "glyphicon glyphicon-link about" %>
            </li>
            <li>
              <%= link_to " sign up", root_path, class: "glyphicon glyphicon-edit sign_up" %>
            </li>
            <li>
              <%= link_to " login", root_path, class: "glyphicon glyphicon-log-in sign_in" %>
            </li>
          </ul>
        </nav>
      </div>
    </header>
    <%# /Header %>
    <%# Main %>
    <div class="body">
      <div class="container">
        <p class="notice"><%= notice %></p>
        <% if alert %>
          <p class="alert"><%= alert %></p>
        <% end %>
        <%= yield %>
      </div>
    </div>
    <%# /Main %>
    <%# Footer %>
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
    <%# /Footer %>
  </body>
</html>
