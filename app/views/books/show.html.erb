<div class="row">
  <div class="col-xs-3">
    <%= render 'users/info', user: @book.user, book: Book.new %>
  </div>
  <div class="col-xs-9">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to @book.user do %>
              <%= image_tag attachment_url(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg"), class: profile_image_class(@book.user), alt: profile_image_alt(@book.user) %>
              <br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to @book.title, @book %>
          </td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %>
            </td>
            <td>
              <%= link_to "Destroy", @book, method: :delete, class: "btn-sm btn-danger destroy_book_#{@book.id}", data: { confirm: "本当に消しますか？" } %>
            </td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>
