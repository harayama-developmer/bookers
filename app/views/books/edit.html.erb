<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Editing Book</h1>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h3><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h3>
        <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= form_with(model: @book, local: true, id: "edit_book_#{@book.id}") do |form| %>
      <div class="field row">
        <%= form.label :title %>
        <%= form.text_field :title, class: "col-xs-12 book_title" %>
      </div>

      <div class="field row">
        <%= form.label :opinion %>
        <%= form.text_area :body, class: "col-xs-12 book_body" %>
      </div>

      <div class="actions row">
        <%= form.submit class: "btn btn-primary col-xs-12" %>
      </div>
    <% end %>
    <%= link_to "Show", @book, class: "book_#{@book.id}" %> |
    <%= link_to "Back", books_path, class: "back" %>
  </div>
  <div class="col-md-3"></div>
</div>
